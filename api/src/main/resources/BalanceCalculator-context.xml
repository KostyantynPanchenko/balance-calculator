<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- STORE  -->
    <bean id="storeResource" class="com.softserveinc.balance.calculator.api.resources.impl.StoreResourceImpl">
        <constructor-arg name="storeService" ref="storeService" />
    </bean>
    
    <bean id="storeService" class="com.softserveinc.balance.calculator.service.impl.StoreServiceImpl">
        <constructor-arg name="storeDao" ref="storeDao"/>
    </bean>
    
    <bean id="storeDao" class="com.softserveinc.balance.calculator.repository.impl.StoreDAOImpl">
        <constructor-arg name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
    
    <!-- REGISTER  -->
    <bean id="registerResource" class="com.softserveinc.balance.calculator.api.resources.impl.RegisterResourceImpl">
        <constructor-arg name="registerService" ref="registerService" />
    </bean>
    
    <bean id="registerService" class="com.softserveinc.balance.calculator.service.impl.RegisterServiceImpl">
        <constructor-arg name="registerDao" ref="registerDao"/>
    </bean>
    
    <bean id="registerDao" class="com.softserveinc.balance.calculator.repository.impl.RegisterDAOImpl">
        <constructor-arg name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
    
    <!-- TRANSACTIONS -->
    <bean id="consumptionResource" class="com.softserveinc.balance.calculator.api.resources.impl.ConsumptionTransactionResourceImpl">
        <constructor-arg name="consumptionService" ref="consumptionService"/>
    </bean>
    
    <bean id="consumptionService" class="com.softserveinc.balance.calculator.service.impl.ConsumptionTransactionServiceImpl">
        <constructor-arg name="consumptionDao" ref="consumptionDao"/>
    </bean>
    
    <bean id="consumptionDao" class="com.softserveinc.balance.calculator.repository.impl.ConsumptionTransactionDAOImpl">
        <property name="jdbcTemplate" ref="jdbcTemplate"></property>
    </bean>
    
    <!-- DataSource  -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>
    
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    
    <bean id="liquibase" class="liquibase.integration.spring.SpringLiquibase">
      <property name="dataSource" ref="dataSource" />
      <property name="changeLog" value="classpath:changelog-master.xml" />
      <property name="contexts" value="test, production" />
    </bean>

    <context:property-placeholder location="jdbc.properties" />

</beans>
