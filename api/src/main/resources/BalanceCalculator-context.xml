<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath:service-context.xml" />
    
    <!-- STORE -->
    <bean id="storeResource" class="balance.calculator.api.resources.impl.StoreResourceImpl">
        <constructor-arg name="storeService" ref="storeService" />
    </bean>
    
    <!-- REGISTER -->
    <bean id="registerResource" class="balance.calculator.api.resources.impl.RegisterResourceImpl">
        <constructor-arg name="registerService" ref="registerService" />
    </bean>
    
    <!-- Balance -->
    <bean id="balanceResource" class="balance.calculator.api.resources.impl.BalanceResourceImpl">
        <constructor-arg name = "balanceService" ref="balanceService"/>
    </bean>
    
    <!-- Consumptions -->
    <bean id="consumptionResource" class="balance.calculator.api.resources.impl.ConsumptionTransactionResourceImpl">
        <constructor-arg name="consumptionService" ref="consumptionService"/>
        <constructor-arg name="transactionAllocationService" ref="transactionAllocationService"/>
    </bean>
    
    <!-- Contributions -->
    <bean id="contributionResource" class="balance.calculator.api.resources.impl.ContributionTransactionResourceImpl">
        <constructor-arg name="contributionService" ref="contributionService"/>
        <constructor-arg name="transactionAllocationService" ref="transactionAllocationService"/>
    </bean>
    
    <!-- Allocations -->
    <bean id="transactionAllocationService" class="balance.calculator.service.impl.TransactionAllocationServiceImpl">
        <constructor-arg name="transactionAllocationDao" ref="transactionAllocationDao"/>
    </bean>

    <!-- Filter -->
    <bean id="preMatchingFilter" class="balance.calculator.api.filters.PreMatchingFilter">
        <constructor-arg name="storeService" ref="storeService"/>
        <constructor-arg name="registerService" ref="registerService"/>
    </bean>
    
    <bean id="storeFilter" class="balance.calculator.api.filters.StoreFilter">
        <constructor-arg name="storeService" ref="storeService"/>
        <constructor-arg name="registerService" ref="registerService"/>
    </bean>
    
    <bean id="registerFilter" class="balance.calculator.api.filters.RegisterFilter">
        <constructor-arg name="storeService" ref="storeService"/>
        <constructor-arg name="registerService" ref="registerService"/>
    </bean>
    
    <bean id="corsFilter" class="balance.calculator.api.filters.CrossOriginFilter"/>
    
    <bean id="healthCheck" class="balance.calculator.api.health.BalanceCalculatorDatabaseHealthCheck">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>
    
    <!-- Exception mappers -->
    <bean id="dataAccessExceptionMapper" class="balance.calculator.api.exception.mappers.DataAccessExceptionMapper"/>
    
    <bean id="dataIntegrityExceptionMapper" class="balance.calculator.api.exception.mappers.DataIntegrityExceptionMapper"/>

</beans>
